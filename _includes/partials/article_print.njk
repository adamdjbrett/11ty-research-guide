<section class="printer">
<div class="container-fluid">
<div class="row">
<div class="col-12 p-3 text-center">
<img class="img-fluid" width="80" height="80" alt="{{metadata.title}}" src="{{metadata.header.logo}}"/> 
<h1><strong>
{{metadata.header.title1}} <span class="text-maron">{{metadata.header.title2}}</span> | {{metadata.header.title_subdomain}}
</strong></h1>
<h2><strong>{{metadata.header.sub_title}}</strong></h2>
<p class="text-start">
{{metadata.header.info}}
</p>
<hr/>

{% if author %}
<div class="col-12 text-start border-bottom">

<div class="row">
<div class="col-2">
<h3 class="text-maron">{{metadata.sidebar.author_title}}</h3>
{% for a in author %}
<img class="img-fluid rounded img-profile mb-1" alt="{{a.name}}" src="{{a.image}}"/>
<p><strong>{{a.name}}</strong></p>
</div>
<div class="col-10">
<p class="text-small">
<strong>About: </strong><br/>
{% for info in a.about %}{{info.info}}<br/>{% endfor %}
<br/>
<strong>Contact: </strong><br/>
{% for call in a.contact %}{{call.info}}<br/>{% endfor %}
<br/>
<a href="mailto:{{a.email}}">{{a.email}}</a>
</p>
{% endfor %}
</div>
</div>

</div>
{% endif %}


<div class="col-12 text-start border-bottom">
<h3 class="mt-3 text-maron"><strong>{{title}}</strong></h3>
{{content|safe}}
</div>
<div class="col-12 text-start p-3">
<p>
<strong>Last Updated:</strong> {{ page.date | readableDate }} | <strong>URL</strong> : {{metadata.url}}{{ page.url}} </p>
</div>
</div>
</div>
</div>
</section>
